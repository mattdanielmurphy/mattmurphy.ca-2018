{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*"
      // "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/resume",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/resume/pdf",
        "destination": "/Matthew-Murphy-Resume.pdf",
        "type": 301
      }
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source" : "**/node_modules/**.@(css|js|min.css|min.js)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=360000"
        } ]
      },
      {
        "source" : "https://fonts.googleapis.com/css?family=Lato:400,700,700i",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=360000"
        } ]
      }
    ]
  }
}
